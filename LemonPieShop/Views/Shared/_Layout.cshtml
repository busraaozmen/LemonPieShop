<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />

    <link href="~/content/site.css" rel="stylesheet" />
</head>
<body class="p-1">
    @*Navbarın oldugu div*@
    <nav class="navbar navbar-expand-lg navbar-dark navbar-inverse">

        <!-- Collapse button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicExampleNav"
                aria-controls="basicExampleNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Collapsible content -->
        <div class="collapse navbar-collapse" id="basicExampleNav">

            <!-- Links -->
            <ul class="navbar-nav mr-auto">
                <li class="nav-item ">
                    <a class="nav-link" asp-controller="Home" asp-action="Index"><em>Home</em></a>
                </li>
                @await Component.InvokeAsync("CategoryMenu")

                <li class="nav-item ">
                    <a class="nav-link" asp-controller="Contact" asp-action="Index"><em>Contact</em></a>
                </li>

                @await Component.InvokeAsync("ShoppingCartSummary")

            </ul>
        </div>
    </nav>
    @*Navbarın oldugu div*@

    @*İçeriğin olduğu div*@
    <div class="container-fluid my-2">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">
                    <img class="img-fluid" alt="Lemon's Pie Shop" src="~/Images/Lemonlogo.png" />
                </p>
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>
    @*İçeriğin olduğu div*@

    <environment names="Development">
        <link rel="stylesheet" href="~/Content/site.css" />
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/Content/site.min.css" />
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    </environment>

    @RenderSection("scripts", required: false)




</body>
</html>
