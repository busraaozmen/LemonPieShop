

@model IEnumerable<Category>


<li class="nav-item">
    <a class="nav-link dropdown-toggle" asp-controller="Pie"
       asp-action="Index"
       data-toggle="dropdown">Pies<b class="caret"></b></a>
    <ul class="dropdown-menu ">
        @foreach (var category in Model)
        {
            <li >
                <a class="dropdown-item" asp-controller="Pie" asp-action="List"
                   asp-route-category="@category.CategoryName">@category.CategoryName</a>
            </li>
        }
        <li class="dropdown-divider "></li>
        <li  >
            <a class="dropdown-item" asp-controller="Pie" asp-action="List" asp-route-Category="">View all pies</a>
        </li>
    </ul>
</li>

